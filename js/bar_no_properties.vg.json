{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "No. of Properties Sold by Region",
  "data": {"url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/the_melbourne_housing_market/data/melbourne_housing.csv"},
  "width": 330,
  "height": 300,
  "selection": {
  "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
  "select": {"type": "multi"}
  },
  "mark": {
    "type": "bar",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "tooltip": [
      {"field": "Region", "type": "nominal"},
      {"aggregate": "count", "type": "quantitative", "title": "No. of Properties Sold", "format": ","}
      ],
    "y": {
      "field": "Region",
      "type": "nominal",
      "sort": "-x"
    },
    "x": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "No. of Properties Sold"
    },
    "fillOpacity": {
      "condition": {"selection": "select", "value": 1},
      "value": 0.3
      },
    "color": {
      "field": "Region",
      "scale": {
            "domain": [
              "Eastern Metropolitan",
              "Eastern Victoria",
              "Northern Metropolitan",
              "Northern Victoria",
              "South-Eastern Metropolitan",
              "Southern Metropolitan",
              "Western Metropolitan",
              "Western Victoria"
            ],
            "range": [
              "#003f5c",
              "#2f4b7c",
              "#665191",
              "#a05195",
              "#d45087",
              "#f95d6a",
              "#ff7c43",
              "#ffa600"
            ]
      },
    "legend": null
    },
    "strokeWidth": {
      "condition": [
        {
          "test": {
            "and": [
              {"selection": "select"},
              "length(data(\"select_store\"))"
            ]
          },
          "value": 2
        },
        {"selection": "highlight", "value": 1}
      ],
      "value": 0
    }
  },
  "config": {
  "scale": {"bandPaddingInner": 0.2}}
}
