{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Type of Properties Sold by Region ",
  "data": {"url": "https://raw.githubusercontent.com/DmnNg/FIT3179/main/the_melbourne_housing_market/data/bar_percent_type_data.csv"},
  "width": 330,
  "height": 300,
  "selection": {
    "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
    "select": {"type": "multi"}
  },
  "mark": {
    "type": "bar",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "tooltip": [
    {"field": "Region", "type": "nominal"},
    {"field": "Type", "type": "nominal", "title": "Property Type"},
    {"field": "Percentage", "type": "quantitative", "format": ".2f"}
    ],
    "x": {
      "aggregate": "sum", 
      "field": "Percentage",
      "title": "Percentage"
      },
    "y": {"field": "Region"},
    "color": {
      "field": "Type",
      "scale": {
      "domain": ["House", "Townhouse", "Unit"],
      "range": ["#1d3557", "#457b9d", "#a8dadc"]
      },
      "title": null,
      "legend": {
        "symbolStrokeWidth": 0,
        "orient": "bottom"}
    },
    "fillOpacity": {
      "condition": {"selection": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "test": {
            "and": [
              {"selection": "select"},
              "length(data(\"select_store\"))"
            ]
          },
          "value": 2
        },
        {"selection": "highlight", "value": 1}
      ],
      "value": 0
    }
  },
  "config": {
    "scale": {
    "bandPaddingInner": 0.2
    }
  }
}
